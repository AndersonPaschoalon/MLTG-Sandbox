{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-fdiagnostics-color=always",
                "-I./*.h",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${fileDirname}/bin/test-app.exe",
                "-lsqlite3",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },      
    ],
    "version": "2.0.0"
}