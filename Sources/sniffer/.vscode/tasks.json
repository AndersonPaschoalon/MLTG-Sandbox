{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-fdiagnostics-color=always",
                "-Wdeprecated-declarations",
                "-I./headers/",
                "-g",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${fileDirname}/bin/test-app-vs.exe",
                "-lsqlite3",
                "-lpcap",
                "-pthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },      
    ],
    "version": "2.0.0"
}