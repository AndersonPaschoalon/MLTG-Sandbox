        {
            "name": "test_mininet ",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/testbed/test_mininet.py",
            "console": "integratedTerminal",
            "sudo": true
        },
        {
            "name": "run_testbed:sample_tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/testbed/run_testbed.py",
