{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-c",
                "${workspaceFolder}/*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }        
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "${workspaceFolder}/*.o",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "${workspaceFolder}/bin/test-sniffer"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }        
        }
    ],
    "version": "2.0.0"
}